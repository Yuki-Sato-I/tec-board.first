<h1 class="title">新規投稿（画像）</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@album,url: "/albums/#{params[:group_id]}") do |f| %>
      <%= f.label :title , "タイトル"%>
      <%= f.text_field :title %>
      <%= f.label :content , "内容" %>
      <%= f.text_area :content , class: "input-mysize" %>
      <%= f.label :images , "写真" %>
      <%= f.file_field :images ,multiple: true ,class: "images_input"%>
      <%= f.submit "アルバム投稿", class: "btn btn-primary" %>
    <% end %>
  </div>  
</div>
