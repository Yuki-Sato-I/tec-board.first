<h1>Log in</h1>

<div class="">
  <div class="">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を保持する</span>
      <% end %>

      <%= f.submit "ログイン" %>
    <% end %>

    <p> <%= link_to "新規登録はこちら", new_user_path %></p>
  </div>
</div>
