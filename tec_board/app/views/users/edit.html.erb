<h1 class="title">プロフィール編集</h1>
<div class="my-top">
  <% if @user.image_name.url %>
    <%= image_tag @user.image_name.url, :size => '120x120' %>
  <% else %>
    <%= image_tag "/user_images/default2.jpg", :size => '120x120' %>
  <% end %>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name ,"ユーザーネーム"%>
      <%= f.text_field :name, class: 'form-control' %>
      <h5>メールアドレス</h5>
      <p><%= @user.email %></p>
      <%= f.label :image_name, "トプ画"%>
      <%= f.file_field :image_name %>

      <%= f.submit "変更する", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>