<h1>掲示編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@board,url: "/boards/#{@group.id}/#{@board.id}") do |f| %>
      <%= f.label :title ,"タイトル"%>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content ,"内容"%>
      <%= f.text_area :content, class: 'form-control input-mysize' %>

      <%= f.submit "変更する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>